<Window x:Class="HW_markup.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_markup"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800">
    <Window.Resources>
        <x:Array Type="{x:Type UserControl}" x:Key="PagesList">
            <local:mainPage/>
        </x:Array>
    </Window.Resources>
    <Grid>
        <ContentPresenter Content="{Binding Path=CurrentPage, 
              Mode=OneWay,
              UpdateSourceTrigger=PropertyChanged}"
                          Margin="50 0 0 0 "/>
        <StackPanel Width="50"
                    HorizontalAlignment="Left"
                    >
            <Button Content="Меню"/>
            <Button Content="Главная"
                    Click="MainPageClick"/>
            <Button Content="Заказы"/>
            
        </StackPanel>
    </Grid>
</Window>
