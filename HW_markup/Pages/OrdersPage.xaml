    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid VerticalAlignment="Center"
                  Margin="10">
                <DockPanel Width="300"
                           HorizontalAlignment="Right">
                    <Button Content="Поиск"
                            DockPanel.Dock="Right"
                            Click="Search_Click"/>
                    <TextBox Text="{Binding Path=SearchText}"/>
                </DockPanel>

                <UniformGrid Width="300"
                             HorizontalAlignment="Left"
                             Columns="3">
                    <Button Content="Добавить"
                            Click="AddOrders_Click"/>
                    <Button Content="Удалить"
                            Click="DeleteOrders_Click"/>
                    <Button Content="Изменить"/>
                    

                </UniformGrid>
                
            </Grid>
        </Grid>
        
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Path=Orders}"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  x:Name="OrdersLV"
                  >
            <!--настройка скролинга ^ -->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Viewbox MaxWidth="200">
                        <Border 
                                Background="White"
                                Height="170"
                                Width="170"
                                CornerRadius="25"
                                BorderBrush="Black"
                                BorderThickness="1">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock 
                                HorizontalAlignment="Center"
                                TextAlignment="Center"
                                FontWeight="Bold">
                                    <Run FontSize="20" 
                                         Text="{Binding Path=Id, 
                                                StringFormat='Заказ: {0}'    }"/>
                                    <LineBreak/>
                                    <Run FontSize="10" 
                                         Text="{Binding Path=Date,
                                                StringFormat='от: {0:d}',
                                                ConverterCulture='ru-RU'    
                                        }"/>
                                </TextBlock>
                                <StackPanel Grid.Row="1">
                                    <TextBlock  Text="{
                                                Binding Path=Client, 
                                                StringFormat='Клиент: {0}' }"
                                                TextWrapping="Wrap"/>

                                    <TextBlock  Text="{
                                                Binding Path=Products.Count, 
                                                StringFormat='Колличество товаров: {0}' }"/>

                                    <TextBlock  Text="{
                                                Binding Path=Price, 
                                                StringFormat='Итого: {0}' }"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Viewbox>
                </DataTemplate>
            </ListView.ItemTemplate>


        </ListView>

        <StatusBar Grid.Row="2">
            <TextBlock Text="{Binding 
                ElementName=OrdersLV, 
                Path=SelectedItems.Count,
                StringFormat='Колличество выделеных заказов: {0}',
                UpdateSourceTrigger=PropertyChanged}"/>
        </StatusBar>
